<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="122dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/liner"
    android:elevation="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/square"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:text="목표"
        android:contentDescription="목표"
        android:textSize="14dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="87dp"
        android:layout_height="89dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:indeterminate="false"
        android:max="100"
        android:contentDescription="프로그레스바"
        android:progressBackgroundTint="#d9d9d9"
        android:progressDrawable="@drawable/circle_progressbar"
        android:progressTint="#FA4756"
        android:textColor="#111111" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-54dp"
        android:layout_marginTop="46dp"
        android:text="0%"
        android:textColor="#111111" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="160dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="[Test Data]"
        android:textColor="#111111" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-336dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="날짜 데이터"
        android:textColor="#111111" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="D-day 데이터"
        android:textColor="#29169F"/>


</LinearLayout>